- title = t('verify_membership.title')

%html{lang: I18n.locale}
  %head
    %meta{charset: 'utf-8'}
    %title= "#{Settings.application.name} - #{title}"
    %link{rel: 'stylesheet', type: 'text/css', href: 'membership_verify.css'}
  %body
    %header.logo
      = header_logo
      %p
        = root.address_name
      = root.complete_address

    %main
    - if person
      %p -----
      %p= person.full_name
      %p= f(person.birthday)
      = image_tag(person.picture_url, size: '72x72')

      - if member?
        valid
      -else
        not valid

    -else
      = t('verify_membership.not_found')

  = render 'layouts/footer'
